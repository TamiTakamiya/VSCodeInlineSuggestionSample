{
    "compilerOptions": {
      "composite": true,
      "target": "ES2020",
      "lib": ["ES2020", "DOM"],
      "module": "CommonJS",
      "moduleResolution": "Node",
      "outDir": "out",
      "sourceMap": true,
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "rootDir": "src"
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules", "test-resources"]
  }
  